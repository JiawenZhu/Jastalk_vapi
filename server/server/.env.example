# Required environment variables
DAILY_API_KEY=your_daily_api_key
DEEPGRAM_API_KEY=your_deepgram_api_key
OPENAI_API_KEY=your_openai_api_key

# Optional environment variables (override defaults as needed)

# Sets the base URL for the Daily API.
DAILY_API_URL=https://api.daily.co/v1

# Specifies the preferred TTS provider.
# Note: If CARTESIA_API_KEY is provided, the bot will use the Cartesia TTS service regardless of this value.
TTS_PROVIDER=deepgram

# Defines the voice identifier for Deepgram TTS (used if Cartesia is not active).
DEEPGRAM_VOICE=aura-athena-en

# CARTESIA_API_KEY is optional. Provide it only if you want to use Cartesia TTS.
# If omitted or left empty, the bot will default to Deepgram TTS.
CARTESIA_API_KEY=your_cartesia_api_key

# Specifies the voice identifier for Cartesia TTS.
CARTESIA_VOICE=79a125e8-cd45-4c13-8a67-188112f4dd22

# Configuration for the OpenAI language model.
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.2

# Select the bot variant: "simple" or "flow".
BOT_TYPE=flow

# Enable the STT mute filter.
ENABLE_STT_MUTE_FILTER=false

# ==========================================
# Performance Optimization Settings
# ==========================================

# Smart Endpointing: Uses a separate LLM call to detect when user finishes speaking
# - Enabled (true): Better turn detection, but adds 200-500ms latency per utterance
# - Disabled (false): Faster responses, may occasionally cut off or wait too long
# Default: true (accuracy over speed)
ENABLE_SMART_ENDPOINTING=true

# Interview Agent Persona (optional)
# Customize the agent's introduction and branding
INTERVIEWER_NAME=
INTERVIEW_BRAND=JasTalk
INTERVIEWER_INTRO=